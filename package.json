{
    "name": "@sap_oss/sap-customer-data-cloud-accelerator",
    "version": "0.0.1",
    "description": "A development environment for SAP Customer Data Cloud that enables the use of modern tools, such as JavaScript and source control.",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "test-old": "cross-env CI=true jest --collect-coverage --coverage --watch=all --coverageDirectory=coverage/unit ./cdc-accelerator",
        "test": "cross-env CI=true npm run update-sap-cdc-toolkit && jest --collect-coverage --coverage --watch=all --coverageDirectory=coverage/unit ./cdc-accelerator/feature",
        "test:e2e": "cross-env E2E=true CI=true jest -i cdc-accelerator/scripts",
        "init-old": " cdc-accelerator/init/index.js",
        "init": "cdc-accelerator/feature/index.js init",
        "reset-old": " cdc-accelerator/reset/reset.js",
        "reset": "cdc-accelerator/feature/index.js reset",
        "build-old": "babel --delete-dir-on-start src -d build && prettier --semi true --trailing-comma none --write build/**/*.js && node cdc-accelerator/build/build.js",
        "build": "cdc-accelerator/feature/index.js build",
        "deploy-old": "babel --delete-dir-on-start src -d build && prettier --semi true --trailing-comma none --write build/**/webScreenSets/**/*.js && node cdc-accelerator/build/build.js && node cdc-accelerator/deploy/deploy.js",
        "deploy": "cdc-accelerator/feature/index.js deploy",
        "start-old": "babel --delete-dir-on-start src -d build && prettier --semi true --trailing-comma none --write build/**/webScreenSets/**/*.js && node cdc-accelerator/build/build.js && light-server -c .lightserverrc",
        "start": " cdc-accelerator/feature/index.js start",
        "update-sap-cdc-toolkit": " cdc-accelerator/scripts/updateSapCdcToolkit.js",
        "cypress:open": "cypress open",
        "cypress:stage": "cypress run --browser chrome",
        "cypress:ci": "start-server-and-test start http://localhost:3000 cypress:stage"
    },
    "bin": {
        "cdc": "./cdc-accelerator/feature/index.js"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/SAP/sap-customer-data-cloud-accelerator.git"
    },
    "bugs": {
        "url": "https://github.com/SAP/sap-customer-data-cloud-accelerator/issues"
    },
    "homepage": "https://github.com/SAP/sap-customer-data-cloud-accelerator#readme",
    "contributors": [
        "Bruno Santos",
        "Guilherme Lopes",
        "Luís Marques",
        "Ricardo Gaião"
    ],
    "jest": {
        "testPathIgnorePatterns": [
            "<rootDir>/build/"
        ],
        "coveragePathIgnorePatterns": [
            "cdc-accelerator/scripts/"
        ],
        "testEnvironment": "jsdom"
    },
    "devDependencies": {
        "@babel/cli": "^7.21.5",
        "@babel/core": "^7.21.8",
        "@babel/preset-env": "^7.21.5",
        "babel-cli": "^6.26.0",
        "babel-plugin-transform-import-meta": "^2.2.1",
        "babel-preset-env": "^1.7.0",
        "cross-env": "^7.0.3",
        "cypress": "^13.6.0",
        "cypress-iframe": "^1.0.1",
        "jest": "^29.3.1",
        "jest-environment-jsdom": "^29.5.0",
        "jest-location-mock": "^1.0.9",
        "prettier": "2.8.8"
    },
    "dependencies": {
        "axios": "^1.6.0",
        "commander": "^11.1.0",
        "cypress-real-events": "^1.11.0",
        "dotenv": "^16.0.3",
        "jszip": "^3.10.1",
        "light-server": "^2.9.1",
        "mustache": "^4.2.0",
        "start-server-and-test": "^2.0.3"
    }
}
